---
server:
  port: 8080
logging:
  level: DEBUG

management:
  context-path: /admin    

spring:
  sleuth:
    sampler:
      percentage: <%= p('zipkin.sampler-percentage') %>
  zipkin:
    enabled: <%= p('zipkin.enabled') %>
    base-url: <%= p('zipkin.base-url') %> 

admin:
  user:  <%= p('admin.user') %>
  password: <%= p('admin.password') %>     

cf:
  firehose:
    enabled: true
    endpoint:  <%= p('cf.firehose.endpoint') %>
    skipTlsValidation: <%= p('cf.firehose.skipTlsValidation') %>


  
influxdb:
  host: <%= p('influxdb.host') %>
  port: <%= p('influxdb.port') %>
  database: <%= p('influxdb.database') %>
  username: <%= p('influxdb.username') %>
  password: <%= p('influxdb.password') %>  
  
