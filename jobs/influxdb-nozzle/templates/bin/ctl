#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/influxdb-nozzle/helpers/ctl_setup.sh 'influxdb-nozzle'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

	exec chpst -u vcap:vcap  $JAVA_HOME/bin/java  \
               -server -XX:+UseG1GC -XX:MinHeapFreeRatio=5 -XX:MaxHeapFreeRatio=25 -Xms128M -Xmx512M -Dlogging.config=$JOB_DIR/config/logback.xml \
               -Djava.security.egd=file:/dev/./urandom \
               -jar /var/vcap/packages/influxdb-connector/influxdb-nozzle.jar  \
               --spring.config.location=$JOB_DIR/config/application.yml \
                >>$LOG_DIR/$JOB_NAME.log 2>&1


    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: influxdb-nozzle_ctl {start|stop}"

    ;;

esac
exit 0
