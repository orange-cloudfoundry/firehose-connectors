---
server:
  address: 127.0.0.1 #only local http rest request accepted
  port: 8081

logging:
  level: DEBUG

management:
  context-path: /admin    

spring:
  sleuth:
    sampler:
      percentage: <%= p('zipkin.sampler-percentage') %>
  zipkin:
    enabled: <%= p('zipkin.enabled') %>
    base-url: <%= p('zipkin.base-url') %> 

admin:
  user:  <%= p('admin.user') %>
  password: <%= p('admin.password') %>     

cf:
  apiHost: <%= p('cf.apiHost') %>
  username: <%= p('cf.username') %>
  password: <%= p('cf.password') %>
  skipTlsValidation: <%= p('cf.skipTlsValidation') %>
  
