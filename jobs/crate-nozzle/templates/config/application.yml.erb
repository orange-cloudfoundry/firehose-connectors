---
logging:
  level: DEBUG

management:
  context-path: /admin    

spring:
  sleuth:
    sampler:
      percentage: <%= p('zipkin.sampler-percentage') %>
  zipkin:
    enabled: <%= p('zipkin.enabled') %>
    base-url: <%= p('zipkin.base-url') %> 

admin:
  user:  <%= p('admin.user') %>
  password: <%= p('admin.password') %>     

cf:
  firehose:
    enabled: true
    endpoint:  <%= p('cf.firehose.endpoint') %>
    skipTlsValidation: <%= p('cf.firehose.skipTlsValidation') %>
  
  
# Loads SQL scripts schema.sql with
spring:
	datasource:
		driver-class-name: io.crate.client.jdbc.CrateDriver	
		initialize: true
		url: jdbc:crate://<%= p('crate.host') %>:<%= p('crate.port') %>/
